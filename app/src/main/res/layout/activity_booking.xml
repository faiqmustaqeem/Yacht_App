<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.digitalexperts.bookyachts.activity.BookingActivity">

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Mon"
        android:textColor="@color/colorPrimary" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e19227"
                android:gravity="center"
                android:padding="12dp"
                android:text="BOOKING"
                android:textColor="#fff"
                android:textStyle="bold"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"

                        android:orientation="vertical"
                        android:paddingBottom="@dimen/activity_vertical_margin">

                        <LinearLayout
                            android:id="@+id/header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <FrameLayout
                                android:layout_width="30dp"
                                android:layout_height="40dp">

                                <ImageButton
                                    android:id="@+id/ivBackMonth"
                                    android:layout_width="15dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/ic_previous"

                                    />

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tvMonth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="January"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="18dip"
                                    android:textStyle="bold" />

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp">

                                <ImageButton
                                    android:id="@+id/ivForwardMonth"
                                    android:layout_width="15dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/ic_next" />

                            </FrameLayout>
                        </LinearLayout>

                        <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"

                            android:paddingTop="6dp">

                            <TextView
                                android:id="@+id/TextView04"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Tue"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/TextView03"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Wed"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/TextView06"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Sun"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/TextView02"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Thu"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/TextView01"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Fri"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Sat"
                                android:textColor="@color/colorPrimary" />

                        </TableRow>

                        <View
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/white"
                            android:padding="2dp"
                            />

                        <GridView
                            android:id="@+id/gvCalendar"
                            android:layout_width="fill_parent"
                            android:layout_height="160dp"
                            android:gravity="center"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="7"
                            android:stretchMode="columnWidth"
                            android:textAlignment="gravity">

                        </GridView>


                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="visible">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#fff"></View>

                            <TextView
                                android:id="@+id/tvViewFacilities"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="Click To View Selected Failities"
                                android:textColor="#fff"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#fff">

                            </View>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/liViewFacilities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="Inclusive Facilities"
                                android:textColor="#fff"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvInclusiveFacilities"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textColor="#fff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="Exclusive Facilities"
                                android:textColor="#fff"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvExclusiveFacilities"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textColor="#fff" />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#fff"></View>

                            <TextView
                                android:id="@+id/tvAddOnFacilities"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="Click To + Add On  Failities"
                                android:textColor="#fff"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#fff"></View>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/liHotslots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#fff"></View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="Click To View Hot Slots"
                                android:textColor="#fff"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#fff"></View>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="@color/light_gray"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/txtSelectYacht"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="30ft"
                                android:textColor="@color/colorPrimary"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"></FrameLayout>

                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="2dp"
                                android:text="750"
                                android:textColor="@color/colorPrimary"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="top"
                                android:gravity="bottom"
                                android:paddingRight="10dp"
                                android:text="AED \n/HOUR"
                                android:textColor="@color/colorPrimary"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtGuest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:text="Max Pax 08"
                            android:textColor="@color/colorPrimary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATE"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="0dp"
                            android:paddingTop="0dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                android:tint="@android:color/black" />

                            <EditText
                                android:id="@+id/etDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:focusable="false"
                                android:hint=""
                                android:inputType="number"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="NO OF GUESTS"/>

                        <EditText
                            android:id="@+id/no_guests"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"></EditText>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="@android:color/white"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="0"
                                android:background="#fff"></View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.7"
                                    android:paddingBottom="0dp"
                                    android:paddingLeft="0dp"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:padding="0dp">

                                   <LinearLayout
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginTop="10dp"
                                       android:layout_gravity="center">

                                       <ImageView
                                           android:layout_width="15dp"
                                           android:layout_height="15dp"
                                           android:layout_gravity="center"
                                           android:src="@drawable/icon_timeandduration"
                                           android:tint="@android:color/black" />

                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_marginLeft="10dp"
                                           android:text="START TIME"
                                           android:textColor="@color/orange"
                                           android:textColorHint="@android:color/black"
                                           android:textSize="12sp" />
                                   </LinearLayout>


                                  <LinearLayout
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                     android:layout_marginTop="10dp"
                                      android:gravity="center">
                                      <Spinner
                                          android:id="@+id/hours_spinner"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content">
                                      </Spinner>

                                      <Spinner
                                          android:layout_marginLeft="0dp"
                                          android:id="@+id/am_pm_spinner"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content">
                                      </Spinner>
                                  </LinearLayout>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1.3"
                                    android:background="@drawable/border"
                                    android:orientation="vertical">

                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:gravity="center">
                                       <ImageView
                                           android:layout_width="15dp"
                                           android:layout_height="15dp"
                                           android:layout_gravity="center"
                                           android:src="@drawable/icon_timeandduration"
                                           android:tint="@android:color/black" />

                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_marginLeft="10dp"
                                           android:text="DURATION"
                                           android:textColor="@color/colorPrimaryDark"
                                           android:textSize="12sp" />
                                   </LinearLayout>

                                   <LinearLayout
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center"
                                       android:orientation="horizontal"
                                       >

                                       <EditText
                                           android:id="@+id/txtDuration"
                                           android:layout_width="24dp"
                                           android:layout_height="wrap_content"
                                           android:layout_marginLeft="5dp"
                                           android:hint="2"
                                           android:imeOptions="actionDone"
                                           android:inputType="number"
                                           android:textColor="@android:color/black"
                                           android:textSize="13sp" />
                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="HOURS"/>
                                   </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>



                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="0"
                                android:background="#fff"></View>
                        </LinearLayout>






                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EMAIL"
                            android:visibility="gone"
                            android:textSize="12sp" />






                            
                          <RadioGroup
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">


                              <RadioButton
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/pay20Percent"
                                  android:onClick="onRadioButtonClicked"
                                    android:text="Pay 20% of total amount"
                                  android:textColor="@color/colorPrimary"
                                  />


                              <RadioButton
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/pay100Percent"
                                  android:text="Pay 100%"
                                  android:onClick="onRadioButtonClicked"
                                  android:textColor="@color/colorPrimary"
                                  />

                          </RadioGroup>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary">

                            <Button
                                android:id="@+id/btnProceedtoTimings"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="0dp"
                                android:background="#3f8b0b"
                                android:clickable="true"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Proceed"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:weightSum="25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/ivNavigationIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:padding="18dp"
                android:src="@drawable/ic_white_menu" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="bottom"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="9dp"
                    android:src="@drawable/ic_home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_gravity="center_horizontal"
                    android:text="HOME"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivCallBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="bottom"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="9dp"
                    android:tint="@color/light_green"
                    android:src="@drawable/ic_phone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:text="CALL BACK"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivHotDeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="bottom"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="9dp"
                    android:tint="@color/red"
                    android:src="@drawable/ic_hot_deals_orange"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:text="HOT DEALS"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivContactUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="bottom"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="9dp"
                    android:src="@drawable/ic_contact"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:text="CONTACT US"/>
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="9dp"
                />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


</LinearLayout>