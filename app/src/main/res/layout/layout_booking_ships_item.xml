<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    android:layout_marginTop="5dp"
    card_view:cardElevation="10dp"
    android:paddingBottom="5dp"
    card_view:cardCornerRadius="5dp">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/liMain"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:padding="15dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        >

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"

            android:background="@android:color/transparent"

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtyacht_title"
                android:layout_width="wrap_content"
                android:text="Yacht Title : 35ft"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Date : "
                android:id="@+id/tvBookingDate"
                android:textSize="15sp"
                />
            <TextView

                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Time : "
                android:textSize="15sp"
                android:id="@+id/tvBookingTime"
                />
            <TextView
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
                android:textSize="10dp"
                />
            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip Duration : 1 Hour"
                android:textSize="15sp"
                android:id="@+id/tvTripDuration"
                />




            <TextView
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:textSize="10sp"
                android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
                >

            </TextView>
            <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount : 30"
            android:textSize="15sp"
            android:id="@+id/tvtotalAmount"
            />
            <TextView
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:textSize="10sp"
                android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
                ></TextView>

            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Paid : "
                android:textSize="15sp"
                android:id="@+id/tvAmountPaid"
                />
            <TextView
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:textSize="10sp"
                android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
                ></TextView>

            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ramaining Amount : "
                android:textSize="15sp"
                android:id="@+id/tvAmountRemaining"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <TextView
                    android:visibility="gone"
                    android:padding="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" See Yacht Detail "
                    android:gravity="center"
                    android:background="#e19227"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:id="@+id/tvDetails"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>